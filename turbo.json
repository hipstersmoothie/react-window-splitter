{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "passThroughEnv": ["DISPLAY", "XAUTHORITY", "XDG_RUNTIME_DIR"]
    },
    "lint": { "outputs": [] },
    "//#lint-root": { "outputs": [] }
  }
}
